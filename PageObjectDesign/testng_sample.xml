<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Regression TestSuite">
	<test name="GroupsDemo">
		<groups>
			<define name="all">
				<include name="bikes"></include>
				<include name="suv"></include>
				<include name="sedan"></include>
			</define>
			<define name="nobikes">
				<include name="suv"></include>
				<include name="sedan"></include>
			</define>
			<define name="onlybikes">
				<include name="bikes"></include>
			</define>
			<run>
				<include name="onlybikes"></include>
			</run>
		</groups>
		<classes>
			<class name="com.hot.testng_example.TestNG_Grouping"></class>
		</classes>
	</test>
</suite>